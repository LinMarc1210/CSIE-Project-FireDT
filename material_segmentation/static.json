{
  "version": "1.0.0",
  "description": "Indoor Fire Simulator 靜態資料表，用於定義各物件在 FDS 中的生成模板與驗證規則。",
  "object_templates": {
    "chair": {
      "default_dimensions": {
        "seat_width": 0.5,
        "seat_half_width": 0.25,
        "seat_depth": 0.5,
        "seat_half_depth": 0.25,
        "seat_height": 0.1,
        "backrest_width": 0.5,
        "backrest_half_width": 0.25,
        "backrest_depth": 0.1,
        "backrest_half_depth": 0.05,
        "backrest_height": 0.5,
        "leg_length": 0.45
      },
      "components": {
        "seat": {
          "position_offset": [0, 0, 0],
          "dimensions": {
            "width": 0.5,
            "depth": 0.5,
            "height": 0.1
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='upholstery' /"
        },
        "backrest": {
          "position_offset": [0, -0.25, 0.1],
          "dimensions": {
            "width": 0.5,
            "depth": 0.1,
            "height": 0.5
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='upholstery' /"
        },
        "legs": {
          "position_offsets": [
            [-0.25, -0.25, 0],
            [-0.25, 0.25, 0],
            [0.25, -0.25, 0],
            [0.25, 0.25, 0]
          ],
          "dimensions": {
            "width": 0.1,
            "depth": 0.1,
            "height": -0.45
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='metal' /"
        }
      }
    },
    "dining table": {
      "default_dimensions": {
        "top_length": 0.6,
        "top_half_length": 0.3,
        "top_width": 2.4,
        "top_half_width": 1.2,
        "top_height": 0.75
      },
      "components": {
        "top": {
          "position_offset": [0, 0, 0],
          "dimensions": {
            "width": 2.4,
            "depth": 0.6,
            "height": 0.05
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='plastic' /"
        },
        "legs": {
          "position_offsets": [
            [-1.15, -0.25, 0],
            [-1.15, 0.25, 0],
            [1.15, -0.25, 0],
            [1.15, 0.25, 0]
          ],
          "dimensions": {
            "width": 0.05,
            "depth": 0.05,
            "height": -0.70
          },
          "FDS_template": "&OBST XB={{x_pos_min}},{{x_pos_max}},{{y_pos_min}},{{y_pos_max}},{{z_pos_min}},{{z_pos_max}}, SURF_ID='wood' /"
        }
      }
    }
  }
}
